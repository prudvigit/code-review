@AbapCatalog.sqlViewName: 'ZV_DEMAND_UNION'
@AbapCatalog.compiler.compareFilter: true
@AccessControl.authorizationCheck: #NOT_REQUIRED
@EndUserText.label: 'Union of All Demand Types'
define view ZCV_P2M_DEMAND_UNION
  as select from vbbe
{
  vbbe.matnr  as Material,
  vbbe.werks  as Plant,
  vbbe.mbdat  as DemandDate
}
where vbbe.mbdat is not null

union all

select from resb
{
  resb.matnr  as Material,
  resb.werks  as Plant,
  resb.bdter  as DemandDate
}
where resb.bdter is not null

union all

select from mdpb
{
  mdpb.matnr  as Material,
  mdpb.werks  as Plant,
  mdpb.pdatu  as DemandDate
}
where mdpb.pdatu is not null
